---
import type Article from "../interfaces/article";

const props: Article = Astro.props as Article;

const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": props.title,
  "description": props.description,
  "image": props.cover.url ? [props.cover.url] : [],
  "datePublished": props.publishedAt,
  "dateModified": props.updatedAt,
  "author": {
    "@type": "Person",
    "name": "Sewdohe",
    "url": "https://divnectar.com/about",
    "sameAs": [
      "https://github.com/sewdohe",
      "https://twitter.com/Sewdohe"
    ]
  },
  "publisher": {
    "@type": "Organization",
    "name": "DivNectar",
    "url": "https://divnectar.com",
    "logo": {
      "@type": "ImageObject",
      "url": "https://divnectar.com/site-logo.webp"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://divnectar.com/blog/${props.slug}`
  },
  "articleSection": props.category?.name || "Technology",
  "inLanguage": "en-US"
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
