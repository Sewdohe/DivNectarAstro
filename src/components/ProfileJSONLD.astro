---
import { string } from "astro:schema";
import type { PlayerData } from "../db/interfaces";

const props: PlayerData = Astro.props as PlayerData;

const schema = {
  "@context": "https://schema.org",
  "@type": "ProfilePage",
  "mainEntity": {
    "@type": "Person",
    "name": props.username,
    "identifier": props.player_uuid,
    "image": `https://minotar.net/cube/${props.player_uuid}/100.png`
  }
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
