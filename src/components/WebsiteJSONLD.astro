    },
    {
      "@type": "Person",
      "@id": "https://divnectar.com/#person",
      "name": "Sewdohe",
      "url": "https://divnectar.com/about",
      "image": {
        "@type": "ImageObject",
        "url": "https://divnectar.com/site-logo.webp"
      },
      "sameAs": [
        "https://github.com/sewdohe",
