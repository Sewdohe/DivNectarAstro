      "logo": {
        "@type": "ImageObject",
        "@id": "https://divnectar.com/#logo",
        "inLanguage": "en-US",
        "url": "https://divnectar.com/site-logo.webp",
        "contentUrl": "https://divnectar.com/site-logo.webp",
        "caption": "DivNectar"
      },
      "image": {
        "@id": "https://divnectar.com/#logo"
      },
      "sameAs": [
        "https://github.com/sewdohe",
